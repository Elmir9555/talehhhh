@model SaleOff

<div class="row">
    <div class="container">
        <div class="title" style="text-align: center;font-weight: bold;letter-spacing:2px;font-size:20px;color: rgba(0,0,0,0.2);">
            Update
        </div>
        <div class="tb">
            <div class="container mt-2">
                <form method="post" asp-action="Update" asp-controller="SaleOff" asp-area="AdminPanel" enctype="multipart/form-data">
                    <div class="table-responsive pt-3">
                        <label asp-for="Name" style="padding-left:70px;">Name <sup>*</sup></label><br>
                        <input asp-for="Name" type="text" style="width:90%;border: none;margin-left: 70px;min-height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>


                        <label asp-for="OldPrice" style="padding-left:70px;">OldPrice <sup>*</sup></label><br>
                        <input asp-for="OldPrice" type="text" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>


                        <label asp-for="NewPrice" style="padding-left:70px;">NewPrice <sup>*</sup></label><br>
                        <input asp-for="NewPrice" type="text" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>


                        <label asp-for="Photo" style="padding-left:70px;">Image <sup>*</sup></label><br>
                        <input asp-for="Photo" style="width:25%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 10px;padding-top: 5px;">

                    </div>
                    <div asp-validation-summary="All" class="text-danger" style="padding-left: 50px;padding-top:20px">

                    </div>
                    <div class="create" style="display:flex;justify-content:flex-end;padding-right: 35px;">
                        <button class="btn btn-warning">Update</button>
                        <a asp-action="SaleOffList" asp-area="AdminPanel" asp-controller="SaleOff" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>