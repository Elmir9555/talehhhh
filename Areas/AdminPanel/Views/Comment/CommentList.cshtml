@model List<Comment>
@{
    var count = 1;
}

<div class="row">
    <div class="container">
        <h3 style="text-align: center">Comment Table</h3>
        
        <div class="tb">
            <div class="container mt-5">
                <div class="table-responsive">
                    <table class="table table-striped table-dark text-white table-hover">

                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th colspan="2">Blog Title</th>
                                <th colspan="2">Message</th>
                                <th colspan="2">CreatedDate</th>

                                <th style="text-align: center;padding-left:100px;">Process</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var saleoff in Model)
                            {
                            <tr>
                                <td class="text-center" style="padding-top:18px">@count</td>
                                <td colspan="2" style="padding-top:20px">
                                    <h6>@saleoff.Message</h6>
                                </td>
                                <td colspan="2" style="padding-top:20px">
                                    <h6>@saleoff.Blog.Title</h6>
                                </td>
                                <td colspan="2" style="padding-top:20px">
                                    <h6>@saleoff.CreatedDate</h6>
                                </td>
                                <td style="display: flex;gap:25px;justify-content:flex-end;">
                                    <a asp-action="Details" asp-controller="Comment" asp-area="AdminPanel" asp-route-id="@saleoff.Id" class="btn btn-primary" style="color:white">Detail</a>
                                    <a asp-action="Update" asp-controller="Comment" asp-area="AdminPanel" asp-route-id="@saleoff.Id" class="btn btn-info">Update</a>
                                    <a asp-action="Delete" asp-controller="Comment" asp-area="AdminPanel" asp-route-id="@saleoff.Id" class="btn btn-danger" style="color:white">Delete</a>
                                </td>
                            </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>