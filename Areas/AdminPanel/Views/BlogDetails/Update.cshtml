@model (BlogDetails product, List<Blog> categories)

<div class="row">
    <div class="container">
        <div class="title" style="text-align: center;font-weight: bold;letter-spacing:2px;font-size:20px;color: rgba(0,0,0,0.2);">
            Update
        </div>
        <div class="tb">
            <div class="container mt-2">
                <form method="post" asp-action="Update" asp-controller="BlogDetails" asp-area="AdminPanel">
                    <div class="table-responsive pt-3">
                        <label asp-for="product.BlogId" style="padding-left:70px;">Blog Name <sup>*</sup></label><br>
                        <select asp-for="product.BlogId" asp-items="@(new SelectList(Model.categories,"Id","Title"))" style="width:90%;border: none;margin-left: 70px;min-height:40px;background-color:black;color:white;padding-left: 20px;"></select><br><br>

                        <label asp-for="product.Description" style="padding-left:70px;">Description <sup>*</sup></label><br>
                        <input asp-for="product.Description" style="width:90%;border: none;margin-left: 70px;min-height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>

                        <label asp-for="product.CategoryName" style="padding-left:70px;">CategoryName <sup>*</sup></label><br>
                        <input asp-for="product.CategoryName" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>

                        <label asp-for="product.Tags" style="padding-left:70px;">Tags <sup>*</sup></label><br>
                        <input asp-for="product.Tags" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>
                    </div>
                    <div asp-validation-summary="All" class="text-danger" style="padding-left: 50px;padding-top:20px">

                    </div>
                    <div class="create" style="display:flex;justify-content:flex-end;padding-right: 35px;">
                        <input type="hidden" asp-for="product.Id" />
                        <button class="btn btn-success">Update</button>
                        <a asp-action="BlogDetailsList" asp-area="AdminPanel" asp-controller="BlogDetails" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>