@model Contact

<div class="row">
    <div class="container">
        <div class="title" style="text-align: center;font-weight: bold;letter-spacing:2px;font-size:20px;color: rgba(0,0,0,0.2);">
            Update
        </div>
        <div class="tb">
            <div class="container mt-2">
                <form method="post" asp-action="Update" asp-controller="Contact" asp-area="AdminPanel" enctype="multipart/form-data">
                    <div class="table-responsive pt-3">
                        <label asp-for="Adress" style="padding-left:70px;">Adress <sup>*</sup></label><br>
                        <input asp-for="Adress" type="text" style="width:90%;border: none;margin-left: 70px;min-height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>
                        <span asp-validation-for="Adress" class="text-danger"></span>

                        <label asp-for="Phone" style="padding-left:70px;">Phone <sup>*</sup></label><br>
                        <input asp-for="Phone" type="text" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>
                        <span asp-validation-for="Phone" class="text-danger"></span>

                        <label asp-for="Email" style="padding-left:70px;">Email <sup>*</sup></label><br>
                        <input asp-for="Email" type="text" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <label asp-for="OpenTime" style="padding-left:70px;">OpenTime <sup>*</sup></label><br>
                        <input asp-for="OpenTime" type="text" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>
                        <span asp-validation-for="OpenTime" class="text-danger"></span>

                    </div>
                    <div class="create" style="display:flex;justify-content:flex-end;padding-right: 35px;">
                        <button class="btn btn-warning">Update</button>
                        <a asp-action="ContactList" asp-area="AdminPanel" asp-controller="Contact" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>