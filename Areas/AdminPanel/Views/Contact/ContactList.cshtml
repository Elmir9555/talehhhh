@model List<Contact>
@{
    var count = 1;
}

<div class="row">
    <div class="container">
        <h3 style="text-align: center">Contact Table</h3>
        <div class="create-btn" style="display:flex;justify-content:flex-end;padding-top:20px;padding-right: 20px;">
            <a asp-action="Create" asp-area="AdminPanel" asp-controller="Contact" class="btn btn-success">Create</a>
        </div>
        <div class="tb">
            <div class="container mt-5">
                <div class="table-responsive">
                    <table class="table table-striped table-dark text-white table-hover">

                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th colspan="2">Adress</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>OpenTime</th>
                                <th style="text-align: center;padding-left:100px;">Process</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var saleoff in Model)
                            {
                            <tr>
                                <td class="text-center" style="padding-top:18px">@count</td>
                                <td colspan="2" style="padding-top:20px">
                                    <h6>@saleoff.Adress</h6>
                                </td>
                                <td colspan="2" style="padding-top:20px">
                                    <h6>@saleoff.Phone</h6>
                                </td>
                                <td colspan="2" style="padding-top:20px">
                                    <h6>@saleoff.Email</h6>
                                </td>
                                <td colspan="2" style="padding-top:20px">
                                    <h6>@saleoff.OpenTime</h6>
                                </td>

                                <td style="display: flex;gap:25px;justify-content:flex-end;">
                                    <a asp-action="Details" asp-controller="Contact" asp-area="AdminPanel" asp-route-id="@saleoff.Id" class="btn btn-primary" style="color:white">Detail</a>
                                    <a asp-action="Update" asp-controller="Contact" asp-area="AdminPanel" asp-route-id="@saleoff.Id" class="btn btn-info">Update</a>
                                    <a asp-action="Delete" asp-controller="Contact" asp-area="AdminPanel" asp-route-id="@saleoff.Id" class="btn btn-danger" style="color:white">Delete</a>
                                </td>
                            </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>