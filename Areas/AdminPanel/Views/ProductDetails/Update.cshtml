@model (ProductDetails productdetails, List<Product> products)


<div class="row">
    <div class="container">
        <div class="title" style="text-align: center;font-weight: bold;letter-spacing:2px;font-size:20px;color: rgba(0,0,0,0.2);">
            Update
        </div>
        <div class="tb">
            <div class="container mt-2">
                <form method="post" asp-action="Update" asp-controller="ProductDetails" asp-area="AdminPanel">
                    <div class="table-responsive pt-3">
                        <label asp-for="productdetails.ProductId" style="padding-left:70px;">Product <sup>*</sup></label><br>
                        <select asp-for="productdetails.ProductId" asp-items="@(new SelectList(Model.products,"Id","Name"))" style="width:90%;border: none;margin-left: 70px;min-height:40px;background-color:black;color: white;padding-left: 20px;"></select><br><br>

                        <label asp-for="productdetails.Weight" style="padding-left:70px;">Weight <sup>*</sup></label><br>
                        <input asp-for="productdetails.Weight" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>


                        <label asp-for="productdetails.StarCount" style="padding-left:70px;">StarCount <sup>*</sup></label><br>
                        <input asp-for="productdetails.StarCount" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>

                        <label asp-for="productdetails.Description" style="padding-left:70px;">Description <sup>*</sup></label><br>
                        <input asp-for="productdetails.Description" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>

                        <label asp-for="productdetails.Availability" style="padding-left:70px;">Availability <sup>*</sup></label><br>
                        <input asp-for="productdetails.Availability" style="font-size:40px;width:200px;height:20px;"><br><br>

                    </div>
                    <div asp-validation-summary="All" class="text-danger" style="padding-left: 50px;padding-top:20px">

                    </div>
                    <div class="create" style="display:flex;justify-content:flex-end;padding-right: 35px;">
                        <input type="hidden" asp-for="productdetails.Id" />
                        <button class="btn btn-success">Update</button>
                        <a asp-action="ProductDetailsList" asp-area="AdminPanel" asp-controller="ProductDetails" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>